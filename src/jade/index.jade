    //head: End

    //slider: Start
    div.slider
        div.wrap
            div.slick-slider
                -
                    var works = {
                        'penoboard.jpg': 'http://trade-meta.ru/works/penoboard/',
                        'flex.jpg': 'http://trade-meta.ru/works/flex/',
                        'centrc.jpg': 'http://www.centrs-video.ru/',
                        'creative.png': 'http://trade-meta.ru/works/creativezone/',
                        'woofee.jpg': 'http://trade-meta.ru/works/woofee/'
                        };
                each link,img in works
                    div: a(href=link, target='_blank'): img(src='img/'+ img , alt='')

            div.slider-nav
                span(id='prev')
                    i(class="fa fa-caret-square-o-left", aria-hidden="true")
                span(id='next')
                    i(class="fa fa-caret-square-o-right", aria-hidden="true")
    //slider: End

    //layouts: Start
    div.layouts
        .wrap
            h1 Вёрстка сайтов
            div.layouts__top
                div.juxtapose
                    img(src="img/website.jpg", alt='')
                    img(src="img/website-wb.jpg", alt='')
            h2 Любой вид вёрстки
            div.layouts__content
                div.outer-block
                ul.ul-kinds
                    each layout,index in ['резиновая', 'фиксированная', 'адаптивная']
                        li: span(class='l' + index) #{layout}
    //layouts: End

    //advantege: Start
