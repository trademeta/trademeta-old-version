                //- Mixin: Start
                mixin getcontent(elem)
                    each p in elem.p
                        p!= p
                    ul
                        each li in elem.li
                            li: p= li
                    a(class='moblink', href=elem['a'], target='_blank')
                        span Перейти на сайт
                    - if(elem['github']!=null)
                        a(class='github', href=elem['github'], target='_blank')
                            span Перейти в gitHub
                //- Mixin: End
                //- book pages: Start
                each elem,h3 in portfolio
                    div.pages1
                        div.page-cont.build
